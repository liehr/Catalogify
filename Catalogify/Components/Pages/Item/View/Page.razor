@page "/Item/View/{id:guid}"

@if (Model == null)
{
    <PlaceholderContainer Animation="PlaceholderAnimation.Glow">
        <Placeholder Width="PlaceholderWidth.Col12" />
        <Placeholder Width="PlaceholderWidth.Col12" Size="PlaceholderSize.Large" />
        <Placeholder Width="PlaceholderWidth.Col12" Size="PlaceholderSize.Small" />
        <Placeholder Width="PlaceholderWidth.Col12" Size="PlaceholderSize.ExtraSmall" />
    </PlaceholderContainer>
}
else
{
    <div class="container-fluid p-5 mb-4 bg-light border rounded-3 shadow-sm">
        <div class="row">
            <div class="col-md-6">
                <img src="@QrByte" class="img-fluid rounded d-block mb-3" alt="@Model.Name image">
                <h1 class="display-5 fw-bold">@Model.Name</h1>
                <p class="text-muted">@Model.Description</p>
            </div>
            <div class="col-md-6 d-flex flex-column justify-content-between">
                <div>
                    @if (Model.Price.HasValue)
                    {
                        <p class="fs-4">Price: @Model.Price.Value</p>
                    }
                    <p class="fs-4">Quantity: @Model.Quantity</p>
                </div>
                <div class="mt-3">
                    @if (Model.Inventory is not null)
                    {
                        <p class="fs-4">Inventory: @Model.Inventory.Name</p>
                    }
                    @if (Model.Categories != null && Model.Categories.Any())
                    {
                        <h3>Categories</h3>
                        <ul class="list-group list-group-flush">
                            @foreach (var category in Model.Categories)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span class="badge rounded-pill bg-info text-dark">@category.Name</span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <Badge Color="BadgeColor.Warning" Class="p-2" IndicatorType="BadgeIndicatorType.RoundedPill">No Category</Badge>
                    }
                </div>
            </div>
        </div>
    </div>
}
