@inherits LayoutComponentBase
@using Catalogify.Components.Pages.Auth

<AuthorizeView>
    <Authorized>
        <div class="page">
            <NavMenu/>

            <main>
                <article class="content px-4">
                    @Body
                </article>
            </main>
        </div>
    </Authorized>
    <NotAuthorized>
        <Register/>
    </NotAuthorized>
</AuthorizeView>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>